<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="uk.org.rbc1b.roms.db.congregation">
    <class name="Congregation" table="Congregation">
        <id name="congregationId" >
            <generator class="identity"/>
        </id>
        <property name="name" length="50" unique="true" />
        <property name="number" length="10" />
        <many-to-one name="kingdomHall" column="KingdomHallId" />
        <many-to-one name="circuit" column="CircuitId" />
        <many-to-one name="rbcRegion" column="RbcRegionId" />
        <many-to-one name="rbcSubRegion" column="RbcSubRegionId" />
        <property name="publishers" length="10" />
        <property name="attendance" length="10" />
        <property name="funds" length="50" />
        <property name="loans" length="10" />
        <property name="monthlyIncome" length="10" />
        <property name="strategy" length="1000" />

        <set name="contacts" inverse="true" cascade="all-delete-orphan">
            <key column="CongregationId" />
            <one-to-many class="uk.org.rbc1b.roms.db.congregation.CongregationContact" />
        </set>
    </class>
</hibernate-mapping>
